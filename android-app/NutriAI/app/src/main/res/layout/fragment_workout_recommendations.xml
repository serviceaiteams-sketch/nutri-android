<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AI Workout Recommendations"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personalized workouts based on your nutrition, health stats, and goals"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="16dp" />

            <!-- AI Analysis Summary -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/background_secondary"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_ai_brain"
                    android:layout_marginEnd="12dp"
                    android:tint="@color/primary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAiAnalysis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AI Analysis: Weight loss focus recommended"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvAiReasoning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Based on your current nutrition and health metrics"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Workout Categories -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Workout Categories"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvViewAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textSize="14sp"
                android:textColor="@color/primary"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Category Chips -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:layout_marginEnd="8dp"
                    app:chipBackgroundColor="@color/primary"
                    android:textColor="@color/white" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipStrength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strength"
                    android:layout_marginEnd="8dp"
                    app:chipBackgroundColor="@color/background_secondary"
                    android:textColor="@color/black" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCardio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cardio"
                    android:layout_marginEnd="8dp"
                    app:chipBackgroundColor="@color/background_secondary"
                    android:textColor="@color/black" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipYoga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yoga"
                    android:layout_marginEnd="8dp"
                    app:chipBackgroundColor="@color/background_secondary"
                    android:textColor="@color/black" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipHiit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HIIT"
                    android:layout_marginEnd="8dp"
                    app:chipBackgroundColor="@color/background_secondary"
                    android:textColor="@color/black" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFlexibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flexibility"
                    android:layout_marginEnd="8dp"
                    app:chipBackgroundColor="@color/background_secondary"
                    android:textColor="@color/black" />

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Top Recommendations -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top Recommendations"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Top Recommendation Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTopRecommendation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Top Recommendation Badge -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_top_recommendation"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_star"
                        android:layout_marginEnd="6dp"
                        android:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TOP RECOMMENDATION"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />

                </LinearLayout>

                <!-- Workout Info -->
                <TextView
                    android:id="@+id/tvTopWorkoutName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HIIT Cardio Blast"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvTopWorkoutDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="High-intensity interval training for maximum calorie burn"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="16dp" />

                <!-- Workout Stats -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@color/background_secondary"
                        android:padding="12dp"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:id="@+id/tvTopDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Minutes"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@color/background_secondary"
                        android:padding="12dp"
                        android:layout_marginHorizontal="4dp">

                        <TextView
                            android:id="@+id/tvTopCalories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="450"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calories"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@color/background_secondary"
                        android:padding="12dp"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/tvTopIntensity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HIGH"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Intensity"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                </LinearLayout>

                <!-- AI Reasoning -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/background_tertiary"
                    android:padding="16dp"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_ai_brain"
                        android:layout_marginEnd="12dp"
                        android:tint="@color/primary" />

                    <TextView
                        android:id="@+id/tvTopReasoning"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="HIIT provides maximum calorie burn in minimal time, perfect for weight loss"
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnStartWorkout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Start Workout"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_primary_button"
                        android:textColor="@color/white"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btnViewDetails"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="View Details"
                        android:textSize="16sp"
                        android:background="@drawable/bg_secondary_button"
                        android:textColor="@color/primary"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- All Workouts -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Workouts"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Workouts RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvWorkouts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_workout_recommendation" />

    </LinearLayout>

</ScrollView>
