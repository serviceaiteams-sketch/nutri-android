<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/card_background"
    android:elevation="2dp">

    <TextView
        android:id="@+id/tvMealPlanName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balanced Weekly Plan"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvMealPlanDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A balanced meal plan for the entire week"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tvTotalCalories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2000 cal"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvTotalProtein"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="120g"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvTotalCarbs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="250g"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvTotalFat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="65g"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:gravity="center" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvCreatedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created: 2024-01-15"
        android:textSize="12sp"
        android:textColor="@color/text_secondary" />

</LinearLayout>
